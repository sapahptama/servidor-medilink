#############################################
# 1. Usuarios
#############################################

### Crear usuario paciente
POST http://localhost:4001/usuarios
Content-Type: application/json

{
  "nombre": "Juan",
  "apellido": "Pérez",
  "telefono": "3001234567",
  "correo": "juan@example.com",
  "contrasena": "123456",
  "rol": "paciente",
  "numero_documento": "123456789",
  "direccion": "Calle 123"
}

### Crear usuario médico
POST http://localhost:4001/usuarios
Content-Type: application/json

{
  "nombre": "Laura",
  "apellido": "Gómez",
  "telefono": "3109876543",
  "correo": "laura@example.com",
  "contrasena": "654321",
  "rol": "medico",
  "numero_documento": "987654321",
  "direccion": "Carrera 45 #23"
}

### Listar usuarios
GET http://localhost:4001/usuarios

### Obtener usuario por id
GET http://localhost:4001/usuarios/10

### Actualizar usuario
PUT http://localhost:4001/usuarios/10
Content-Type: application/json

{
  "nombre": "Juan Modificado",
  "apellido": "Pérez",
  "telefono": "3019998888",
  "correo": "juan_mod@example.com",
  "rol": "paciente",
  "numero_documento": "123456789",
  "direccion": "Calle 456"
}

### Eliminar usuario
DELETE http://localhost:4001/usuarios/6


